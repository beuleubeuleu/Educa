---
const { quiz } = Astro.props;
---

<li class="container">
  <div class="text">
    <h2>{quiz.title}</h2>
  </div>
  <div class="text"><p>{quiz.questions[0].question}</p></div>
  <a href={`/quiz/${quiz.url}`} class="button"> Tentez le quiz</a>
</li>

<style>
  .container:hover {
    -webkit-box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
  }

  .container {
    width: 300px;
    margin: 3em auto auto;
    position: relative;
    background: white;
    border-radius: 4px;
    box-shadow: 0px 20px 50px #d9dbdf;
    -webkit-transition: all 0.3s ease;
    -o-transition: all 0.3s ease;
    transition: all 0.3s ease;
  }

  p {
    font-weight: 100;
    color: #000;
  }

  .button {
    background-color: #5d9892;
    color: white;
    padding: 0.6em 0.2em;
    border-radius: 3px;
    text-align: center;
    text-decoration: none;
    display: block;
    cursor: pointer;
  }

  .tag {
    background: rgb(76, 128, 122);
    color: white;
    text-decoration: none;
    padding: 0.1em 0.4em;
    font-size: 1rem;
    border-radius: 3px 3px 0 0;
    position: absolute;
    top: -1.7em;
  }

  img {
    width: 300px;
    height: 200px;
  }

  .text {
    padding: 1em;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1em;
  }

  h2 {
    font-size: 1.3rem;
  }
</style>
